<nav class="top-bar" data-topbar role="navigation">
  <ul class="title-area">
    <li class="name">
      <h1><%= link_to "Rento-Copter", root_path %></h1>
    </li>
     <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
    <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
  </ul>

  <section class="top-bar-section">

    <!-- Right Nav Section -->
    <ul class="right">
      <% if current_user %>
        <li>
          <% if current_user.role == 'owner' %>
            <%= link_to "+ Property",  new_property_path %>
          <% end %>
        </li>
        <li class="active"><%= link_to current_user.username, user_path(current_user) %></li>
        <li class="active"><%= link_to "Sign out", session_path("current"), :method => :delete %></li>
        <li class="active"><%= link_to current_user.role.capitalize, "#" %></li>
      <% else %>
        <li class="active"><%= link_to "Sign up", new_user_path %></li>
        <li class="active"><%= link_to "Sign in", new_session_path %></li>
      <% end %>
    </ul>

    <!-- Left Nav Section -->
    <ul class="left">
      <!-- <li><a href="#">Left Nav Button</a></li> -->
    </ul>
  </section>
</nav>