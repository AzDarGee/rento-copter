<div class="row">
  <div class="small-6 large-centered columns">
    <h1><%= @property.title %></h1>

    <ul>
      <li>Rent: <%= @property.rent %></li>
      <li>Address: <%= @property.address %></li>
      <li>Description: <%= @property.description %></li>
      <li><%= link_to "Edit", edit_property_path %></li>
    </ul>
    <hr>
    <%= link_to "Back", :back %>

    <!-- VISITATION LIST -  -->
    <% if current_user && current_user.role == 'customer' %>
      <h3>Book your visit at <%= @property.title %></h3>
      <%= form_for [@property, @visitation] do |f| %>
        <%= render 'shared/form_errors', :thing => @visitation %>
        <div class="field">
          <%= f.label :start_time, 'When' %>
          <%= f.select :start_time, @property.time_slots.map{|dt| [nice_datetime(dt), dt] } %>
        </div>
        <div class="field">
          <%= f.label :notes %>
          <%= f.text_field :notes %>
        </div>
        <div class="field">
          <%= f.label :num_people %>
          <%= f.number_field :num_people, :value => 1, :min => 1 %>
        </div>
        <%= f.submit "Book Visit", class: "button" %>
      <% end %>
    <% end %>

  </div>
</div>