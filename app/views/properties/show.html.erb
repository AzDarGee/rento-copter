
<h1 id="show-prop-title"><%= @property.title %><small>-<%= link_to "Edit", edit_property_path %></small></h1>
<hr>
<h3 id="show-prop-rent">Rent: <%= @property.rent %></h3>
<h3 id="show-prop-address">Address: <%= @property.address %></h3>
<h3 id="show-prop-rooms">Type: <%= @property.type_prop %> | Rooms: <%= @property.num_rooms %> | Bathrooms: <%= @property.num_bathrooms %> | Accomodates: <%= @property.num_accomodates %></h3>
<h3 id="show-prop-desc">Description: <%= @property.description %></h3>

<hr>

<div class="row">

    
        <!-- VISITATION LIST -  -->
    <% if current_user && current_user.role == 'customer' %>
      <h3>Book your visit at <%= @property.title %></h3>
      <%= form_for [@property, @visitation] do |f| %>
        <%= render 'shared/form_errors', :thing => @visitation %>
        <div class="field">
          <%= f.label :start_time, 'When' %>
          <%= f.select :start_time, @property.time_slots.map{|dt| [nice_datetime(dt), dt] } %>
        </div>
        <div class="field">
          <%= f.label :notes %>
          <%= f.text_field :notes %>
        </div>
        <div class="field">
          <%= f.label :num_people %>
          <%= f.number_field :num_people, :value => 1, :min => 1 %>
        </div>
        <div class="field">
          <%= f.label :agent %>
          <%= f.select :agent, [["Jordan", 'jordan'], ["Wael", 'wael'], ["Kathy", 'kathy'], ["Alexandra",'alexandra']] %>
        </div>
        <%= f.submit "Book Visit", class: "button" %>
      <% end %>
      <hr>
    <% end %>

</div>

<h3 id="show-prop-back-link"><%= link_to "Back", :back %></h3>




   




   
